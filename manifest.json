{
  "manifest_version": 2,
  "name": "Youtube Chat Helper",
  "version": "1.0",
  "description": "Set of handy buttons to fix Youtube watching in Firefox.",
  "icons": {
    "48": "icon-48.png"
  },
  "permissions": ["activeTab"],
  "browser_action": {
    "default_title": "Utilities for Youtube chat",
    "default_popup": "menu.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-chat-size@posvic.cz"
    }
  }
}
